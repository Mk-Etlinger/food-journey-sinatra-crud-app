%h2.title Sign Up!
- if flash.has?(:error)
    = flash[:error][0]
%form{:action => "/signup", :method => "POST"}

    %p
    %label Username:
    %input{:type => "text", :name => "username"}/ 
    %p
    %label Password:
    %input{:type => "password", :name => "password"}/
    %p
    %label Email:
    %input{:type => "text", :name => "email"}/
    %p
    %input{:type => "submit", :value => "Sign Up"}/

