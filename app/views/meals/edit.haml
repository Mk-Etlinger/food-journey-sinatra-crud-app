%h3.title Edit a meal

%form{:action => "/edit", :method => "POST"}
    %input{:name => "_method", :type => "hidden", :value => "patch"}/
    %p
    %input#radio1{:name => "meal[meal_type]", :type => "radio", :value => "breakfast", :checked => @meal.meal_type == "breakfast"}/
    %label{:for => "radio1"} Breakfast
    %input#radio2{:name => "meal[meal_type]", :type => "radio", :value => "lunch", :checked => @meal.meal_type == "lunch"}/
    %label{:for => "radio2"} Lunch
    %input#radio3{:name => "meal[meal_type]", :type => "radio", :value => "dinner", :checked => @meal.meal_type == "dinner"}/
    %label{:for => "radio3"} Dinner
    %input#radio4{:name => "meal[meal_type]", :type => "radio", :value => "snack", :checked => @meal.meal_type == "snack"}/
    %label{:for => "radio4"} Snack
    %p
    %label Meal Description
    %input{:type => "text", :name => "meal[description]", :value => "#{@meal.description}"} 
    %p
    %label Ingredients
    %input{:type => "text", :name => "ingredients[name]"}
    
    %p
    %label Existing Ingredients
    - @ingredients.each do |ingredient|
        %input{:type => "checkbox", :name => "meal[ingredient_ids][]", 
        :value => "#{ingredient.id}", 
        :checked => @meal.ingredients.include?(ingredient)} #{ingredient.name}
    %p 
    %input{:type => "submit", :value => "Submit Changes"}/
    